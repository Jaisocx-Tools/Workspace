{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  // config: "XDebug Symfony app under docker" is for debugging with jaisocx-http under docker in this setup.
  "version": "0.2.0",
  "configurations": [
    
    
    
    {
      "name": "Debug Site",
      "type": "php",
      "request": "launch",
      "port": 9007,
      "pathMappings": {
          "/var/www/code/php": "${workspaceFolder}/code/php"
      },
      "profile": false,
      "openProfile": true,
      "stopOnEntry": true,
      "externalConsole": true,
      "runtimeExecutable": "/usr/local/bin/php",
      "log": true
    },
    {
      "name": "(Under development) Profile",
      "type": "php",
      "request": "launch",
      "runtimeArgs": [
          "-S", "workspace.brightday.email/php/", "-t", "."
      ],
      "pathMappings": {
          "/var/www/code/php": "${workspaceFolder}/code/php"
      },
      "noDebug": true, // <-- disable debugging
      "profile": true, // <-- enable profiling
    },
    {
      "name": "(Under development) Debug CLI PHP",
      "type": "php",
      "request": "launch",
      "cwd": "${fileDirname}",
      "program": "${file}",
      "stopOnEntry": true,
      "profile": false,
      "openProfile": true,
      "externalConsole": false,
      "runtimeExecutable": "/usr/local/bin/php",
      "port": 9007,
      "pathMappings": {
          "/var/www/code/php": "${workspaceFolder}/code/php"
      },
      "log": true
    }
  ]
}

